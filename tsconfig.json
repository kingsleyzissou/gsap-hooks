{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "lib": [      
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "__mocks__",
  ]	  
}
